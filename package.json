{
  "name": "@increments/graphql-client",
  "version": "0.1.3",
  "description": "A lightweight GraphQL client",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "git@github.com:increments/graphql-client-js.git",
  "author": "Yuku TAKAHASHI <yuku@qiita.com>",
  "license": "MIT",
  "scripts": {
    "build": "(rm -fr dist || true) &&rollup -c",
    "format": "run-s format:tslint format:prettier",
    "format:prettier": "prettier --no-semi --trailing-comma all --parser typescript --write 'src/*.ts'",
    "format:tslint": "tslint --fix -p .",
    "jest": "jest",
    "lint": "run-p lint:*",
    "lint:prettier": "prettier --no-semi --trailing-comma all -l --parser typescript 'src/*.ts' || (echo 'Need to run `yarn run format`' && exit 1)",
    "lint:tslint": "tslint --project .",
    "test": "run-s lint jest"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "graphql": "^0.13.1",
    "jest": "^22.4.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "rollup": "^0.56.4",
    "rollup-plugin-typescript2": "^0.11.1",
    "rollup-plugin-uglify": "^3.0.0",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "typescript": "^2.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/?(*.)test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "./node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverage": true
  }
}
